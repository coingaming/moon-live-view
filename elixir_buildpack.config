# Elixir version
elixir_version=1.18.0

# Erlang version
erlang_version=27.1

# Always rebuild from scratch on every deploy?
always_rebuild=false

# Create a release using `mix release`? (requires Elixir 1.9+)
runtime_path=/app

# A command to run right before compiling the app (after elixir, .etc.)
pre_compile="mix assets.deploy"

# A command to run right after compiling the app
post_compile="echo 'Post compile hook completed'"

# Set the path the app is run from
runtime_path=/app